
<%# app/views/sessions/new.html.erb %>
<div class="page-container">
<h1>ログイン</h1>
</div>

<div class="form-container"> <%# フォームの見た目を整えるためにクラスを使用 %>
  <%= form_with(url: login_path, scope: :session) do |form|  %>
    <div class="form-field">
      <%= form.label :email, "メールアドレス" %>
      <%= form.email_field :email %>
    </div>

    <div class="form-field">
      <%= form.label :password, "パスワード" %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.submit "ログイン", class: "form-submit-button" %>
    </div>
  <% end %>
</div>

<p style="margin-top: 20px; text-align: center;"><%= link_to "新規登録はこちら", new_user_path, style: "color: #007bff; text-decoration: none;" %></p>

<%# フラッシュメッセージ（ログイン失敗時など）の表示 %>
<% if flash[:alert] %>
  <div class="error-messages" style="margin-top: 20px;">
    <h2><%= flash[:alert] %></h2>
  </div>
<% end %>
