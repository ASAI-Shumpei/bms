<%# app/views/layouts/_header.html.erb %>
<header style="background-color: #f0f0f0; padding: 10px 20px; border-bottom: 1px solid #ccc; display: flex; justify-content: space-between; align-items: center;">
  <div class="app-title">
    <%= link_to root_path, style: "display: flex; align-items: center; text-decoration: none;" do %>
      <%= image_tag "Logo3.png", alt: "アプリのロゴ", style: "height: 100px; margin-right: 10px;" %>
    <% end %>
  </div>
  <nav>
    <ul style="list-style: none; margin: 0; padding: 0; display: flex;">
      <li style="margin-right: 15px;">
        <%= link_to "書籍一覧", books_path, style: "text-decoration: none; color: #555; font-weight: bold;" %>
      </li>
      <% if logged_in? && current_user&.admin?%>
      <li style="margin-right: 15px;">
        <%= link_to "書籍を追加", new_book_path, style: "text-decoration: none; color: #555; font-weight: bold;" %>
      </li>
      <% end %>

      <% if logged_in? %> <%# ログインしている場合 %>
        <li style="margin-right: 15px;">
          <%= link_to "アカウント情報", user_path(current_user), style: "text-decoration: none; color: #555; font-weight: bold;" %>
        </li>
        <li>
          <%= link_to "ログアウト", logout_path, data: { "turbo-method": :delete , turbo_confirm: 'ログアウトしてよろしいか？' } ,style: "text-decoration: none; color: #555; font-weight: bold;" %>
        </li>
      <% else %> <%# ログインしていない場合 %>
        <li style="margin-right: 15px;">
          <%= link_to "ログイン", login_path, style: "text-decoration: none; color: #555; font-weight: bold;" %>
        </li>
        <li>
          <%= link_to "新規登録", new_user_path, style: "text-decoration: none; color: #555; font-weight: bold;" %>
        </li>
      <% end %>
      
    </ul>
  </nav>
</header>